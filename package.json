{
  "name": "gemini-pr-description",
  "version": "1.0.0",
  "description": "GitHub Action to generate PR descriptions using Google Gemini AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/(?!integration)",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "github-action",
    "gemini",
    "ai",
    "pull-request",
    "description",
    "automation"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathansudhakar1/gemini-pr-description.git"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@google/generative-ai": "^0.21.0",
    "minimatch": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
